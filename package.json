{
  "name": "pokedex-api",
  "version": "1.0.0",
  "description": "API Pokédex com REST e GraphQL, autenticação JWT, banco em memória e Swagger.",
  "main": "server.js",
  "scripts": {
    "test": "mocha 'test/**/*.test.js' --timeout 10000",
    "test-rest-external": "mocha 'test/rest/external/**/*.test.js' --timeout 10000",
    "test-rest-controller": "mocha 'test/rest/controller/**/*.test.js' --timeout 10000",
    "test-graphql-external": "mocha 'test/graphql/external/**/*.test.js' --timeout 10000",
    "test-graphql-controller": "mocha 'test/graphql/controller/**/*.test.js' --timeout 10000",
    "start:rest": "node server.js",
    "start:graphql": "node graphql-server.js",
    "start:all": "concurrently \"node server.js\" \"node graphql-server.js\"",
    "dev:rest": "nodemon server.js",
    "dev:graphql": "nodemon graphql-server.js",
    "dev:all": "concurrently \"nodemon server.js\" \"nodemon graphql-server.js\""
  },
  "author": "PGATS",
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^3.12.0",
    "bcryptjs": "^2.4.3",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "jsonwebtoken": "^9.0.2",
    "swagger-ui-express": "^4.6.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "chai": "^4.4.1",
    "chai-exclude": "^2.1.1",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.2",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3"
  }
}
